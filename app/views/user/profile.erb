<div class="container">
  <div class="_tickets">
    <div id="ticket_sub">
       <h1>My Profile </h1>
      <div id="profile">
      <% @user = User.find(params[:user_id]) %>
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <h4><%= @user.role_type.capitalize %></h4>
      <img src="http://www.gravatar.com/avatar/<%= gravatar_hash(@user.email) %>">
      <br>
      <a href="mailto:<%= @user.email %>">Email <%= @user.first_name %></a>
    </div>
  </div>
  </div>
</div>



