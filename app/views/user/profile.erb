<div class="container">
  <div class="profile">
    <img src="http://www.gravatar.com/avatar/<%= gravatar_hash(@user.email) %>">
    <h3><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h3>
    <h4><%= @user.role_type.capitalize %></h4>
    <h4><%=@user.username %></h4>
    <a href="mailto:<%= @user.email %>">Email <%= @user.first_name %></a> 
    <a href="/users/<%=@user.id%>/edit"><button>edit info</button></a>
  </div>
  <div class="profile">
    <h2>submit a ticket</h2>
    <form action="">
      <br>What do you need help with?<br>
      <br><input type="text" name="description"required></input><br>
      <br>Where are you? Enter the station #.<br>
      <br>
      <select name="location">
        <option value="kernel">Kernel</option>
        <option value="workstations">Workstations</option>
        <option value="thread">Thread</option>
        <option value="object">Object</option>
        <option value="string">String</option>
      </select><br>
      <br><input type="submit" id="submit_ticket"></input>
    </form>
  </div>

  <section>
    <h2>My tickets</h2>
      <ol id="ticket_history">
      <!-- querying in view - bad practice - fix later!! -->
        <% @user.student_tickets.each do |i| %>
        <li><% if i.resolved == false %>
            <%= i.description %>
            <form name="remove" action="">
              <input type="hidden" name="ticket_id" value="<%=i.id%>">
              <input type="submit" id="remove" value="remove">
              <input type="submit" id="resolved" value="resolved">
            </form>
            <% end %>
        <% end %>
        </li>
      </ol>
  </section>
</div>






